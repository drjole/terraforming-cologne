<div class="mb-4 flex gap-1 border-b pb-2">
  <%= link_to "🏠", :root, class: "inline-block py-2" %>
  <div class="ms-auto flex items-center gap-4">
    <% if authenticated? %>
      <% if Current.user.admin? %>
        <%= link_to t(".participants"), :participants, class: "font-bold hover:text-teal-500" %>
      <% end %>
      <%= link_to t(".profile"), :profile, class: "font-bold hover:text-teal-500" %>
      <%=
        button_to t("logout"),
                  :logout,
                  method: :delete,
                  class:
                    "ms-auto inline-block cursor-pointer rounded-lg bg-slate-300 px-4 py-2 font-bold hover:bg-slate-400"
      %>
    <% else %>
      <%= link_to t("login"), :login, class: "text-teal-700 underline decoration-2 hover:text-teal-500" %>
    <% end %>
  </div>
</div>
