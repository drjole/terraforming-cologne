<%= turbo_frame_tag @user do %>
  <%= form_with model: @user do |form| %>
    <%= form.email_field :email_address %>
    <%= form.submit %>
  <% end %>
  <%= link_to t(".cancel"), @user %>
  <%=
    button_to t(".deactivate"),
              @user,
              method: :delete,
              data: {
                turbo_frame: "_top",
                turbo_confirm: t(".deactivate.confirm"),
              }
  %>
<% end %>
