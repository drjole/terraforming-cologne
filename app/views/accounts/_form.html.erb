<%= form_with model: user, url: :account, class: "flex flex-col gap-2" do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="flex flex-col gap-1">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: "rounded" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= form.label :email_address %>
    <%= form.email_field :email_address, required: true, class: "rounded" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, maxlength: 72, class: "rounded" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true, maxlength: 72, class: "rounded" %>
  </div>

  <div class="flex">
    <%=
      form.submit t(".submit"),
                  class:
                    "ms-auto inline-block cursor-pointer rounded-lg bg-teal-300 px-4 py-2 font-bold hover:bg-teal-400"
    %>
  </div>
<% end %>
